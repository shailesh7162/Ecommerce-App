<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/blue"
    android:id="@+id/Reletiv_show"
    android:layout_height="@dimen/_150sdp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/_30sdp"
    android:textStyle="bold"
    android:id="@+id/product_show_name"
    android:padding="@dimen/_5sdp"
    android:text="abcd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_show_desc"
        android:textSize="@dimen/_20sdp"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/product_show_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_show_desc"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        android:padding="@dimen/_5sdp"
        android:text="@string/Register"
        android:id="@+id/product_show_price"/>
    <ImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
       android:id="@+id/product_show_image"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>