<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/add_product_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/add_image"/>

    <EditText
        android:id="@+id/pro_name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:padding="15dp"
        android:background="#404DA5E8"
        android:hint="Entre Product Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/pro_price_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:padding="15dp"
        android:background="#404DA5E8"
        android:hint="Entre Product Price"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/pro_dec_edt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        android:padding="15dp"
        android:background="#404DA5E8"
        android:hint="Entre Product Description"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:inputType="text"/>

    <Button
        android:id="@+id/add_product_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Product"
        android:textSize="20sp"
        android:textAllCaps="false"/>

</LinearLayout>